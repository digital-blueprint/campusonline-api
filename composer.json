{
    "name": "dbp/campusonline-api",
    "type": "library",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": ">=7.3",
        "ext-json": "*",
        "ext-simplexml": "*",
        "guzzlehttp/guzzle": "^7.3",
        "kevinrob/guzzle-cache-middleware": "^3.5",
        "league/uri": "^6.5",
        "symfony/polyfill-php80": "^1.23"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.0.0",
        "phpstan/phpstan-phpunit": "^1.0.0",
        "phpunit/phpunit": "^9.5",
        "symfony/phpunit-bridge": "^5.2",
        "vimeo/psalm": "^4.2.1"
    },
    "autoload": {
        "psr-4": {
            "Dbp\\CampusonlineApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dbp\\CampusonlineApi\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.3"
        },
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "scripts": {
        "test": [
            "@php vendor/bin/phpunit"
        ],
        "phpstan": [
            "@php vendor/bin/phpunit --atleast-version 0",
            "@php vendor/bin/phpstan analyze --ansi"
        ],
        "psalm": [
            "@php vendor/bin/phpunit --atleast-version 0",
            "@php vendor/bin/psalm"
        ],
        "lint": [
            "@composer run cs",
            "@composer run phpstan",
            "@composer run psalm"
        ],
        "cs-fix": [
            "@php vendor/bin/php-cs-fixer --ansi fix"
        ],
        "cs": [
            "@php vendor/bin/php-cs-fixer --ansi fix --dry-run --diff"
        ],
        "coverage": [
            "@php vendor/bin/phpunit --coverage-html _coverage"
        ]
    }
}
